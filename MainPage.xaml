<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E1202110120132.MainPage"
             Title="Sitio Visitado">

    <StackLayout Padding="10">
        <Button Text="Obtener la latitud y longitud automáticamente" Clicked="OnGetLocationClicked"/>
        <Button Text="Bloquear el ingreso de datos en la latitud y longitud" Clicked="OnLockLocationClicked"/>
        <Entry x:Name="latitudEntry" Placeholder="Latitud" IsEnabled="False"/>
        <Entry x:Name="longitudEntry" Placeholder="Longitud" IsEnabled="False"/>
        <Entry x:Name="descripcionEntry" Placeholder="Descripción"/>
        <Button Text="Agregar" Clicked="OnAgregarClicked"/>
        <Button Text="Lista Sitios" Clicked="OnListaSitiosClicked"/>
        <Button Text="Salir App" Clicked="OnSalirAppClicked"/>
    </StackLayout>

</ContentPage>
